@model MySecurityBank.Models.MySecureBank.Models.PaymentViewModel
@{
    ViewData["Title"] = "Create Payment";
}
<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Create Payment</h2>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="space-y-6">
        @Html.AntiForgeryToken()
        <div class="relative">
            <label asp-for="Amount" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Amount" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter amount" />
            <span asp-validation-for="Amount" class="text-red-500 text-sm transition-opacity duration-200"></span>
        </div>
        <div class="relative">
            <label asp-for="Currency" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Currency" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter currency" />
            <span asp-validation-for="Currency" class="text-red-500 text-sm transition-opacity duration-200"></span>
        </div>
        <div class="relative">
            <label asp-for="Provider" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Provider" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter provider" />
            <span asp-validation-for="Provider" class="text-red-500 text-sm transition-opacity duration-200"></span>
        </div>
        <div class="relative">
            <label asp-for="RecipientAccount" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="RecipientAccount" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter recipient account" />
            <span asp-validation-for="RecipientAccount" class="text-red-500 text-sm transition-opacity duration-200"></span>
        </div>
        <div class="relative">
            <label asp-for="SwiftCode" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="SwiftCode" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter SWIFT code" />
            <span asp-validation-for="SwiftCode" class="text-red-500 text-sm transition-opacity duration-200"></span>
        </div>
        <div class="relative">
            <label asp-for="Attachment" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Attachment" type="file" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Attachment" class="text-red-500 text-sm transition-opacity duration-200"></span>
        </div>
        <button type="submit" class="w-full bg-blue-700 text-white py-2 px-4 rounded-md hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200">Submit Payment</button>
    </form>
</div>