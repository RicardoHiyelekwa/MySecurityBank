@{
    ViewData["Title"] = "Welcome";
}
<div class="max-w-2xl mx-auto text-center">
    <h2 class="text-3xl font-bold text-gray-800 mb-4">Welcome to MySecureBank</h2>
    <p class="text-gray-600 mb-6">This is a secure demo portal. Join us today to manage your finances with ease.</p>
    <div class="space-x-4">
        <a asp-controller="Account" asp-action="Register" class="inline-block bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Register</a>
        <a asp-controller="Account" asp-action="Login" class="inline-block bg-gray-600 text-white py-2 px-4 rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">Login</a>
    </div>
</div>