@{
    ViewData["Title"] = "Dashboard";
}
<div class="max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Welcome, @User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value</h2>
    <p class="text-gray-600 mb-4">Account Number: @User.FindFirst("AccountNumber")?.Value</p>
    <p class="text-gray-600">You are logged in to your MySecureBank account.</p>
    <div class="mt-6">
        <a asp-controller="Account" asp-action="Logout" class="inline-block bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition duration-200">Logout</a>
    </div>
</div>