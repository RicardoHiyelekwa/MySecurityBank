@model MySecurityBank.Models.MySecureBank.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Register</h2>
    <form asp-action="Register" method="post" class="space-y-6">
        @Html.AntiForgeryToken()
        <div class="relative">
            <label asp-for="FullName" class="block text-sm font-medium text-gray-700"></label>
            <div class="mt-1 flex items-center">
                <span class="absolute left-3 text-gray-400"><i class="fas fa-user"></i></span>
                <input asp-for="FullName" class="pl-10 w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter full name" />
            </div>
            <span asp-validation-for="FullName" class="text-red-500 text-sm transition-opacity duration-200"></span>
        </div>
        <div class="relative">
            <label asp-for="IdNumber" class="block text-sm font-medium text-gray-700"></label>
            <div class="mt-1 flex items-center">
                <span class="absolute left-3 text-gray-400"><i class="fas fa-id-card"></i></span>
                <input asp-for="IdNumber" class="pl-10 w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter ID number" />
            </div>
            <span asp-validation-for="IdNumber" class="text-red-500 text-sm transition-opacity duration-200"></span>
        </div>
        <div class="relative">
            <label asp-for="AccountNumber" class="block text-sm font-medium text-gray-700"></label>
            <div class="mt-1 flex items-center">
                <span class="absolute left-3 text-gray-400"><i class="fas fa-user"></i></span>
                <input asp-for="AccountNumber" class="pl-10 w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter account number" />
            </div>
            <span asp-validation-for="AccountNumber" class="text-red-500 text-sm transition-opacity duration-200"></span>
        </div>
        <div class="relative">
            <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
            <div class="mt-1 flex items-center">
                <span class="absolute left-3 text-gray-400"><i class="fas fa-lock"></i></span>
                <input asp-for="Password" type="password" class="pl-10 w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Enter password" />
            </div>
            <span asp-validation-for="Password" class="text-red-500 text-sm transition-opacity duration-200"></span>
        </div>
        <div class="relative">
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
            <div class="mt-1 flex items-center">
                <span class="absolute left-3 text-gray-400"><i class="fas fa-lock"></i></span>
                <input asp-for="ConfirmPassword" type="password" class="pl-10 w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" placeholder="Confirm password" />
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm transition-opacity duration-200"></span>
        </div>
        <button type="submit" class="w-full bg-blue-700 text-white py-2 px-4 rounded-md hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200">Register</button>
    </form>
</div>